%tr
  %td= version.event
  %td= version.item_type
  %td= link_to_object version
  %td= link_to_user version.whodunnit
  %td= time_ago_in_words version.created_at
  %td
    = link_to "#modal#{version.id}", :class => 'btn btn-mini', :role => 'button', :'data-toggle' => 'modal' do
      = content_tag :i, nil, class: 'icon-eye-open'
    = render partial: 'modal', locals: { version: version }
