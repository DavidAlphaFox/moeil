%tr
  %td= link_to mailbox.email, [:edit, :admin, mailbox.domain, mailbox]
  %td= :yes if mailbox.admin
  %td= :no unless mailbox.active
  %td
    - if can? :destroy, mailbox
      = link_to [:admin, mailbox.domain, mailbox], method: :delete, confirm: 'Are you sure?', class: 'btn btn-mini btn-danger' do
        = content_tag :i, nil, class: 'icon-trash icon-white'
