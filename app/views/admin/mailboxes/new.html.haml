.page-header
  %h1 Create Mailbox
  = link_to_back

= simple_form_for [:admin, resource.domain, resource] do |f|
  .row
    .col-md-6
      .well
        %fieldset
          %legend Account Information
          = f.input :username, wrapper: :append do
            = f.input_field :username, class: 'randomize'
            = content_tag :span, class: 'input-group-btn' do
              = link_to icon(:random), '#', class: 'btn btn-default randomize'
          = f.association :domain, collection: managable_domains, include_blank: false
          = f.input :name

      .well
        %fieldset
          %legend Password
          = f.input :password
          = f.input :password_confirmation, label: false

    .col-md-6
      .well
        %fieldset
          %legend Miscellaneous
          = f.input :active
          = f.input :admin
          = f.input :quota, hint: 'in Bytes'
          = f.input :mail_location

  .form-actions
    %button{type: 'submit', class: 'btn btn-primary'}
      = icon :ok
      Create Mailbox
    %button{type: 'reset', class: 'btn btn-danger'}
      = icon :remove
      Reset Form
