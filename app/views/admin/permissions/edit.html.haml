%h1
  Permission for
  = resource.subject.email
  on
  = resource.item.name
= link_to_back
%hr

= simple_form_for [:admin, resource.item, resource] do |f|
  .row-fluid
    .span6
      .well
        %fieldset
          %legend Permission
          = f.input :role, collection: Permission::ROLES

  .row-fluid
    .span6
      .form-actions
        %button{type: 'submit', class: 'btn btn-primary'}
          %i{class: 'icon-ok icon-white'}
          Update Permission
        %button{type: 'reset', class: 'btn btn-danger'}
          %i{class: 'icon-remove icon-white'}
          Reset Form
