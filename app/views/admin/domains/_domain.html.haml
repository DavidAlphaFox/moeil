%tr
  %td= link_to domain.name, edit_admin_domain_path(domain)
  %td= link_to domain.mailboxes.count, admin_domain_mailboxes_path(domain)
  %td= link_to domain.aliases.count, admin_domain_aliases_path(domain)
  %td
    = link_to admin_domain_path(domain), method: :delete, confirm: 'Are you sure?', class: 'btn btn-mini btn-danger' do
      = content_tag :i, nil, class: 'icon-trash icon-white'
