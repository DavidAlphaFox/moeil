.nav-collapse.collapse
  %ul.nav
    - if current_mailbox.try(:manager?)
      %li{class: 'divider-vertical'}
      %li{class: active_navigation('admin/domains')}
        = link_to 'Domains', admin_domains_path
      - if current_mailbox.admin?
        %li{class: active_navigation('admin/versions')}
          = link_to 'Changes', admin_versions_path
      %li{class: 'divider-vertical'}
      %li{class: active_navigation('admin/mailboxes')}
        = link_to new_admin_domain_mailbox_path(Domain.default) do
          = content_tag :i, nil, class: 'icon-plus icon-white'
          Mailbox
      %li{class: active_navigation('admin/aliases')}
        = link_to new_admin_domain_alias_path(Domain.default) do
          = content_tag :i, nil, class: 'icon-plus icon-white'
          Alias

  %ul.nav.pull-right
    %li{class: active_navigation('mailbox')}
      = link_to current_mailbox.email, edit_mailbox_path
    %li{class: active_navigation('devise/sessions')}
      = link_to 'Logout', destroy_mailbox_session_path, method: :delete
